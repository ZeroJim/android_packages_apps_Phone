<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!--
     The grid of buttons used in the onscreen DTMF dialpad;
     see dtmf_twelve_key_dialer_view.xml.
    -->

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialpad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialpad_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialpad_vertical_margin"
        android:background="@drawable/shendu_dial_background_texture"
        android:paddingTop="@dimen/dialpad_paddingTop"
        android:paddingBottom="@dimen/dialpad_marginBottom"
        android:paddingLeft="19dip"
        android:paddingRight="17dip" >

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1" 
            android:layout_marginBottom="@dimen/incall_touch_dialpad_button_margin">

            <ImageButton
                android:id="@+id/one"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_one"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/two"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_two"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/three"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_three"/>
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1" 
            android:layout_marginBottom="@dimen/incall_touch_dialpad_button_margin">

            <ImageButton
                android:id="@+id/four"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_four"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin" />

            <ImageButton
                android:id="@+id/five"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_five"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin" />

            <ImageButton
                android:id="@+id/six"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_six"/>
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1" 
            android:layout_marginBottom="@dimen/incall_touch_dialpad_button_margin">

            <ImageButton
                android:id="@+id/seven"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_seven" 
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/eight"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_eight"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/nine"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_nine"/>
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/star"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_star"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/zero"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_zero"
                android:layout_marginRight="@dimen/incall_touch_dialpad_button_margin"/>

            <ImageButton
                android:id="@+id/pound"
                style="@style/DialpadButtonStyle"
                android:contentDescription="@string/description_image_button_pound" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dip"
        android:src="@drawable/shendu_dial_num_bg" />

</FrameLayout>